{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "~*": [
        "../*"
      ]
    },
    "typeRoots": [
      "./src/@types",
      "../node_modules/@types"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "postCssOptions": {
            "useConfig": true
          },
        }
      }
    ]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    ".yalc"
  ]
}